<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
    <div class="posts-index-item">
        <div class="post-left">
        <img src="<%= "/user_images/#{post.user.image_file}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
         <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            <div class='post_index_picture'>
            </div>
         </div>
         <div class='post-title'>
          タイトル：<%= link_to(post.title, "/posts/#{post.id}") %> 
        </div>
          レビュー：<%= link_to(post.content, "/posts/#{post.id}") %>         
        </div>
    </div>
    <% end %>
    <div class="for-scroll"></div>
  
  <div id="js-scroll-top" class="scroll-top">TOP</div>
    <%= paginate @posts %>
  </div>
</div>

