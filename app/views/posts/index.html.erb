<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
    <div class="posts-index-item">
        <div class="post-left">
        <img src="<%= "/user_images/#{post.user.image_file}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
         <%= link_to(post.user.name, "/users/#{post.user.id}") %>
           <%
=begin%>
 <%= image_tag post.resized_image if post.picture.attached? %> 
<%
=end%>
          <% if post.picture.present? %>
         <%= '画像ファイル有'%>
         <% end %> 
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>         
        </div>
    </div>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>

