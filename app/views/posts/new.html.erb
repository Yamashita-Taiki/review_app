<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
​
    <%= form_with model: @post, url: "/posts/create", local: true do |f| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
              <div class="form-error">
                <%= message %>
              </div>
          <% end %>
          <%= f.text_area :content %>
          <div class="field">
            <%= f.label :picture %>
            <%= f.file_field :picture %>
          </div>
          <%= f.submit "投稿" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
